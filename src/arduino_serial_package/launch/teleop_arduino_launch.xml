<launch>
  <node pkg="arduino_serial_package" exec="arduino_serial_drivetrain" name="arduino_serial_drivetrain">
    <param name="serial_port" value="/dev/ttyACM0"/> <!--Set Serial Port Here-->
    <param name="baud_rate" value="9600"/> <!--Set Baudrate Here-->
  </node>
  <node pkg="arduino_serial_package" exec="arduino_serial_linac" name="arduino_serial_linac">
    <param name="serial_port" value="/dev/ttyACM1"/> <!--Set Serial Port Here-->
    <param name="baud_rate" value="9600"/> <!--Set Baudrate Here-->
  </node>
</launch>